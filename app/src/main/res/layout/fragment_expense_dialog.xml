    <TextView
        android:id="@+id/dateTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="105dp"
        android:layout_marginTop="33dp"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/amountSpentTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/expenseNameTxt"
        android:layout_alignParentTop="true"
        android:layout_marginTop="74dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/edit_text_custom"
        android:ems="10"
        android:hint="@string/amountTxt"
        android:inputType="number"
        android:padding="5dp"
        android:textAlignment="center" />


    <EditText
        android:id="@+id/expenseNameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/dateTxt"
        android:layout_alignParentTop="true"
        android:layout_marginTop="142dp"
        android:background="@drawable/edit_text_custom"
        android:ems="10"
        android:hint="@string/titleExpense"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:textAlignment="center" />

    <Spinner
        android:id="@+id/categorySpinner"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/expenseNameTxt"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="101dp"
        android:entries="@array/txtGroup"
        android:padding="5dp"
        android:textAlignment="center" />

</RelativeLayout>